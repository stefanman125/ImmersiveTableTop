/* Full-screen centered layout for 16:9 screens */
body, html {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background-color: rgba(240, 244, 248, 1);
    font-family: Arial, sans-serif;
    padding: 0px; /* So weird that without this, there is some padding */
    margin: 0px;
}

/* Button styling */
.game-button {
    flex: 1;
    padding: 20px;
    font-size: 1.5em;
    font-weight: bold;
    color: #ffffff;
    background-color: rgba(0, 123, 255, 1);
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
}

.button-container button:hover {
    background-color: rgba(0, 86, 179, 1);
}

#welcome-banner {
    background-color: rgba(0, 0, 255, 1);
    position: relative;
    flex: 0 0 20%;
}

#welcome-banner span {
    position: absolute;
    left: 10%;
    top: 20%;
}

.banner-text {
    font-size: 6em;
    font-family: 'BebasNeue';
    color: rgba(255, 255, 255, 1);
}

#index-buttons {
    flex: 0 0 10%;
    display: flex;
    flex-direction: row;
}

#index-buttons button {
    flex: 1;
    font-size: 3em;
    font-family: "BebasNeue";
    background-color: rgba(240, 244, 248, 1);
}

#game-container {
    flex: 0 0 70%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.game {
    display: flex;
    flex-direction: column;
    border: 0.2vw solid rgba(0, 0, 0, 1);
    height: 50%;
    width: 90%;
}

.game-title {
    flex: 0 0 15%;
    text-align: center;
    font-size: 2em;
    background-color: gray;
}

.game-middle-content {
    flex: 0 0 55%;
    display: flex;
    flex-direction: row;
    gap: 2vw;
}

.game-image-container {
    flex: 0 0 30%;
    position: relative;
}

.game-image {
    width: auto;
    height: 10vw;
    position: absolute;
    translate: -50% -50%;
    left: 50%;
    top: 50%;
}

.game-description {
    flex: 0 0 70%;
}

.game-buttons {
    flex: 0 0 20%;
    display: flex;
    flex-direction: row;
    gap: 0.1vw;
    background-color: gray;
}

.game-buttons button {
    flex: 1;
}